<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="helloDialog"
       
    >
        <customHeader>
            <OverflowToolbar >
            <core:Icon
                src="sap-icon://hello-world"
                size="1rem"
                class=""
            />
                <Title text="Hello {mainModel>/recipient/name}"></Title>
                 
            </OverflowToolbar>
        </customHeader>
        <content>
            <core:Icon
                src="sap-icon://hello-world"
                size="8rem"
                class="sapUiMediumMargin"
            />
        </content>
        <endButton>
            <Button
                type="Emphasized"
                text="Close"
                press="onCloseDialog"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
