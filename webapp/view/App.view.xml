<mvc:View
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc" 
   controllerName="ui5.walkthrough.controller.App">
   <Button
      text="{i18n>showHelloButtonText}"
      press=".onShowHello"/>
      <Input
      busy="{mainModel>/busy}"
      value="{mainModel>/recipient/name}"
      liveChange="onLiveChange"
      description="Hello {mainModel>/recipient/name}"
      valueLiveUpdate="true"
      width="60%"/>
</mvc:View>